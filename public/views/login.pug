extends ./layout.pug

block breadcrumbs
	ul.breadcrumb
		li
			a(href="/") Home
		li(class="active") Login

block content
	.container
		.page-header
			h1 Login
	.container
		form(role="form", method="post", action="/login")
			.form-group
				label(for="usr") Username
				input#usr.form-control(type="username", name="username", placeholder="Username")
			.form-group
				label(for="psw") Password
				input#psw.form-control(type="password", name="password", placeholder="Password")
			.form-group
				input.btn.btn-default(type="submit", value="Login")
